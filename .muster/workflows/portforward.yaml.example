name: portforward-workflow
description: "Set up port forwarding for a service"
icon: "üåê"
agentModifiable: true
createdBy: "user"
version: 1
inputSchema:
  type: object
  properties:
    namespace:
      type: string
      description: "Kubernetes namespace containing the service"
      default: "default"
    service:
      type: string
      description: "Name of the service to forward"
    port:
      type: string
      description: "Service port to forward"
    localPort:
      type: string
      description: "Local port to bind to"
      default: "8080"
  required: ["service", "port"]
steps:
  - id: create_portforward
    tool: api_portforward_create
    args:
      namespace: "{{ .namespace }}"
      service: "{{ .service }}"
      port: "{{ .port }}"
      localPort: "{{ .localPort }}"
    store: "portforward_result"
  - id: verify_connection
    tool: api_portforward_status
    args:
      id: "{{ .portforward_result.id }}" 